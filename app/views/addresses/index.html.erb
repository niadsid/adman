<h1>Listing addresses</h1>

<table>
  <tr>
    <th>Network address</th>
    <th>Description</th>
    <th>Virtual ip</th>
    <th>Subnet</th>
    <th>Interface</th>
    <th>System</th>
    <th>Nat address</th>
    <th>Nat address range</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @addresses.each do |address| %>
  <tr>
    <td><%= address.network_address %>/<%= address.mask_length %></td>
    <td><%= address.description %></td>
    <td><%= address.virtual_ip %></td>
    <td><%= address.subnet.subnet_name %></td>
    <td><%= address.interface.interface_name %></td>
    <td><%= address.interface.system.system_name %></td>
    <td><% unless address.nat_address.nil? %>
    	<%= address.nat_address.network_address %>
    	<% end %>
    </td>
    <td><% unless address.address_range.nil? %>
    	<%= address.address_range.first_address %>-<%= address.address_range.last_address %>
    	<% end %>
    </td>
    <td><%= link_to 'Show', address %></td>
    <td><%= link_to 'Edit', edit_address_path(address) %></td>
    <td><%= link_to 'Destroy', address, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

